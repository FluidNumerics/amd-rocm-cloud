{
   "variables": {
	   "vpc": "{{env `BUILD_VPC_ID`}}",
	   "subnet": "{{env `BUILD_SUBNET_ID`}}",
	   "aws_region": "{{env `AWS_REGION`}}",
	   "ami_name": "my-rocm-singularity-test-ami-{{isotime}}",
	   "access_key": "{{env `AWS_ACCESS_KEY`}}",
	   "secret_key": "{{env `AWS_SECRET_KEY`}}",
	   "ssh_keypair": "{{env `SSH_KEYPAIR`}}",
	   "ssh_private_key_file": "{{env `SSH_PRIVATE_KEY_FILE`}}"
   },
   "builders": [{
	   "name": "AWS AMI Builder",
	   "access_key": "{{user `access_key`}}",
	   "secret_key": "{{user `secret_key`}}",
	   "type": "amazon-ebs",
	   "ami_virtualization_type": "hvm",
           "region": "{{user `aws_region`}}",
	   "source_ami": "ami-042e8287309f5df03",
	   "associate_public_ip_address": "true",
	   "ebs_optimized": "true",
	   "vpc_id": "{{user `vpc`}}",
	   "subnet_id": "{{user `subnet`}}",
	   "instance_type": "g4ad.4xlarge",
	   "ssh_username": "ubuntu",
	   "ami_name": "{{user `ami_name` | clean_resource_name}}",
	   "ssh_keypair_name": "{{user `ssh_keypair`}}",
	   "ssh_private_key_file": "{{user `ssh_private_key_file`}}",
	   "tags": {
		   "Name": "{{user `ami_name`}}"
	   }
   }],
   "provisioners": [{
	   "type": "shell",
           "script": "p1.sh",
	   "valid_exit_codes": [0, 1, 2300218],
	   "expect_disconnect": "true"
   },
   {
	   "type": "shell",
	   "pause_before": "10s",
           "script": "p2.sh",
	   "valid_exit_codes": [0, 1, 2300218],
	   "expect_disconnect": "true"
   },
   {
	   "type": "shell",
	   "pause_before": "10s",
           "script": "p3.sh",
	   "valid_exit_codes": [0, 1, 2300218],
	   "expect_disconnect": "true"
 
   }]
}
